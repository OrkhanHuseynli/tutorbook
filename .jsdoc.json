{
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc"]
    },
    "source": {
        "include": [
	    "./src/app/packages/",
	    "./src/site/packages/", 
	    "./README.md"
	],
        "includePattern": ".js$",
        "excludePattern": "node_modules/"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "templates": {
        "cleverLinks": true,
        "useLongnameInNav": false,
	"referenceTitle": "Tutorbook Docs"
    },
    "opts": {
        "destination": "./build/docs/",
        "encoding": "utf8",
        "private": true,
        "recurse": true,
        "template": "./src/app/node_modules/@tutorbook/minami",
	"tutorials": "./tutorials"
    }
}
